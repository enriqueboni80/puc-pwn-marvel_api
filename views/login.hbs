<div class="content">
  <div class="logo">
    <img src="/images/logo.png">
  </div>
  {{#if flashInfo}}
    <div class="alert alert-danger" role="alert">{{flashInfo}}</div>
    {{/if}}
  <div class="form-content">
    <form action="/auth/login" method="post">
      <div class="form-group">
        <input type="email" name="email" class="form-control" placeholder="email">
      </div>
      <div class="form-group">
        <input type="password" name="password" class="form-control" placeholder="password">
      </div>
      <button type="submit" class="btn btn-submit-home">SIGN IN</button>
    </form>
  </div>
  <hr>
  <div class="create-link-home">
    <a class="btn btn-create-account" href="/user/create">CRIAR UMA NOVA CONTA</a>
  </div>
</div>